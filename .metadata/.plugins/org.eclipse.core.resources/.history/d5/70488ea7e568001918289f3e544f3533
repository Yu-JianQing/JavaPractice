package YiSTE_2;

public class CopyOfEaterThread extends Thread{
	private final CopyOfTool leftHand;
	private final CopyOfTool rightHand;
	private String personName;
	
	public CopyOfEaterThread(String personName,CopyOfTool leftHand,CopyOfTool rightHand) {
		this.leftHand=leftHand;
		this.rightHand=rightHand;
		this.personName=personName;
	}
	
	public  void eat(){
		synchronized(leftHand){
			System.out.println(personName+"拿起"+leftHand);
			synchronized (rightHand) {
				System.out.println(personName+"拿起"+rightHand);
				System.out.println(personName+"吃饭");
				System.out.println(personName+"放下"+rightHand);
			}
			System.out.println(personName+"放下"+leftHand);
		}		
	}
	
	public void run(){
		while(true){
			this.eat();
		}
	}
	
}
