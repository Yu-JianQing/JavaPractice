package YiSTE;

public class Gate {
	private int count=0;
	private String Pname="Nobody";
	private String Paddress="Nowhere";
	
	public void pass(String Pname,String Paddress){System.out.println(count);try {
		Thread.sleep(1000);
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
		this.count++;System.out.println(count);
		this.Pname=Pname;
		this.Paddress=Paddress;
//		check();
		if(Pname.charAt(0)!=Paddress.charAt(0))
			System.out.println("*******broken********"+toString());
	}
	
	public String toString(){
		return "No."+count+":"+Pname+","+Paddress;
	}
	
